{% set version = "1.23.5" %}

package:
  name: jupyter_server
  version: {{ version }}

source:
  url: https://pypi.io/packages/source/j/jupyter_server/jupyter_server-{{ version }}.tar.gz
  sha256: a2caa759e2a29ece1aad013c58215fe951f38317b97de462b921834955fe3fca

build:
  noarch: python
  number: 0
  script:
    - {{ PYTHON }} -m pip install . --no-deps --ignore-installed --no-cache-dir -vvv
  entry_points:
    - jupyter-server = jupyter_server.serverapp:main

requirements:
  host:
    - jupyter-packaging >=0.9,<1.0
    - pip
    - python >=3.7
  run:
    - anyio >=3.1.0
    - argon2-cffi
    - jinja2
    - jupyter_client >=6.1.12
    - jupyter_core >=4.12,!=5.0.*
    - nbconvert-core >=6.4.4  # avoid hard dependency on pandoc
    - nbformat >=5.2.0
    - packaging
    - prometheus_client
    - python >=3.7
    - pyzmq >=17
    - send2trash
    - terminado >=0.8.3
    - tornado >=6.1.0
    - traitlets >=5.1.0
    - websocket-client
    # - pywinpty  # [win]  # rely on terminado to get this to keep noarch


test:
  requires:
    - pip
    # test deps
    - coverage
    - ipykernel
    - pytest >=6.0
    - pytest-console-scripts
    - pytest-cov
    - pytest-mock
    - pytest-timeout
    - pytest-tornasync
    - requests
  commands:
    - pip check
    - jupyter server -h
    - cd tests && pytest -vv --cov jupyter_server --cov-report term-missing:skip-covered --no-cov-on-fail --cov-fail-under 70
  imports:
    - jupyter_server
  # TODO: restore when more stable
  # downstreams:
  #   - jupyterlab >=3.2
  #   - jupyterlab_server >=2.14.0

about:
  home: https://jupyter.org
  license: BSD-3-Clause
  license_family: BSD
  license_file: COPYING.md
  summary: Jupyter Server
  description: The Jupyter Server provides the backend for Jupyter web applications such as the Jupyter notebook and JupyterLab.
  dev_url: https://github.com/jupyter/jupyter_server
  doc_url: https://jupyter-server.readthedocs.io

extra:
  recipe-maintainers:
    - SylvainCorlay
    - maartenbreddels
